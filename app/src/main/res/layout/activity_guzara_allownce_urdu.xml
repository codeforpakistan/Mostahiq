<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:id="@+id/guzara_parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/main_toolbar"
        android:id="@+id/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translate_btn"
        android:background="@color/grey"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/btn_appointment"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/color3"
                android:elevation="12dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:paddingHorizontal="32dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/how_to_apply">

                <com.kpitb.zakatandusher.utility.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_click"
                    android:drawablePadding="12dp"
                    android:onClick="DownloadForm"
                    android:text="فارم حاصل کرنے کے لئے یہاں کلک کریں"
                    android:textColor="@color/white"
                    tools:ignore="OnClick" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/elgibelity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:elevation="16dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="@+id/intro"
                app:layout_constraintStart_toStartOf="@+id/intro"
                app:layout_constraintTop_toBottomOf="@+id/intro"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corners_btn_2"
                        android:backgroundTint="@color/white"
                        android:padding="4dp">

                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/elgibelity_head_urdu"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints">


                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:fontFamily="serif"
                            android:gravity="center|right"
                            android:text="1:  ٓاستحقق ، درخواست دہندگان کے مستقل رہائشی علاقے  کی مقامی زکوٰۃ کمیٹی متعین کرتی ہے۔ \n2: بالغ مسلمان جو غربت کے نچلے طبقے سے ہیں، بیواؤں اور معزوروں کو برتری ہوگی۔ \n3: بیروزگار۔ \n4: عادتاََ بھکاری نہ ہو."
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/how_to_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:elevation="16dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="@+id/elgibelity"
                app:layout_constraintStart_toStartOf="@+id/elgibelity"
                app:layout_constraintTop_toBottomOf="@+id/elgibelity"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corners_btn_2"
                        android:backgroundTint="@color/white"
                        android:padding="4dp">

                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="درخواست کیسے دیں"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:padding="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints">


                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="center|right"
                            android:text="مستحق شخس اپنے علاقے کی مقامی زکوٰۃ کمیٹی کے چیئرمین کو درخواست دے سکتا ہے۔"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="center|right"
                            android:text="1: 415.200 ملین روپے، ساٹھ فیصد باقاعدہ زکوٰۃ بجٹ کے. \n2: روپے 1000 فی مہینہ مستحک \n3: مالی سال 2016-17ء میں فائدہ اٹھانے والوں کی تعداد 34600. \n4: زکوٰۃ امداد فراہم کرنے کے لئے ٓاستحقق کا تعین علاقے کی مقامی زکوٰۃ کمیٹی کرتی ہے۔"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/white"
                android:elevation="16dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_corners_btn_2"
                        android:backgroundTint="@color/white"
                        android:padding="4dp">

                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="گزارا الاؤنس"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/color3"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/mainCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints">


                        <com.kpitb.zakatandusher.utility.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:fontFamily="serif"
                            android:gravity="center|right"
                            android:text="گزارا الاؤنس ایک ماہانہ عطیہ ہے جو دائمی غریبوں کے لیے ہے۔ \n اس کا مقصد انھیں بھوک سے بچانا ہےجو کہ انتہائی غربت کا سبب اور مظہر ہے۔ \n اس کی موجودہ ماہانہ شرح ۲ ہزار روپیہ ہے. \n اور مستحق شخص کے رہائشی علاقے کی مقامی زکوٰۃ کمیٹی کے ذریعہ اس کی ادائیگی کی جاتی ہے۔"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>