<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailsOfLZC">

    <include layout="@layout/main_toolbar" android:id="@+id/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                android:id="@+id/district_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                android:text="Local Zakat Committee"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/separator3"
                android:layout_width="0dp"
                android:layout_height="0.9dp"
                android:layout_below="@+id/district_details"
                android:layout_alignLeft="@+id/district_details"
                android:layout_alignRight="@+id/district_details"
                android:background="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_hospital_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district_details"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="4dp"
                android:layout_marginHorizontal="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Local Zakat Committee Name"
                        android:textColor="@color/yellow50"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="12dp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:id="@+id/lzc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="LZC Name"
                        android:background="@drawable/round_filled4"
                        android:padding="4dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tehsil Name"
                        android:textColor="@color/yellow50"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="12dp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:id="@+id/tehsil_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/round_filled4"
                        android:padding="4dp"
                        android:text="Tehsil Name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chairman Name"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/yellow50"
                        android:layout_marginLeft="12dp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:id="@+id/chairman_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="Chairman Name"
                        android:background="@drawable/round_filled4"
                        android:padding="4dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chairman Number"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/yellow50"
                        android:layout_marginLeft="12dp" />

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:id="@+id/chairman_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="Chairman Number"
                        android:background="@drawable/round_filled4"
                        android:padding="4dp"
                        android:layout_marginBottom="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/card_hospital_item"
                android:layout_margin="4dp">

                <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Click Button to Contact with Chairman"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="12dp"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/call_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_btn_two"
                    android:layout_margin="18dp"
                    android:padding="0dp">

                    <ImageButton
                        android:id="@+id/call_dzo_phone_no"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/ic_phone"
                        android:backgroundTint="@color/yellow50"
                        android:elevation="12dp"/>

                    <com.kpitb.zakatandmustahiq.utility.CustomTextViewForMainPage
                        android:id="@+id/dzo_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call_dzo_phone_no"
                        android:textStyle="bold"
                        android:text="Contact Chairman"
                        android:padding="4dp"
                        android:textColor="@color/yellow50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>