<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <include layout="@layout/main_toolbar_two" android:id="@+id/app_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@+id/app_bar"
        android:layout_above="@+id/txtComplaint"
        android:layout_marginBottom="5dp"
        ></androidx.recyclerview.widget.RecyclerView>

    <com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtComplaint"
        android:text="For complaints click below link"
        android:textAllCaps="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/view"
        android:textSize="13sp"
        android:visibility="invisible"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="6dp"/>

    <com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtComplaintUrdu"
        android:text="شکایات کے لئے نیچے لنک پر کلک کریں"
        android:textAllCaps="true"
        android:layout_above="@+id/view"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="6dp"/>

    <com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtComplaintPashto"
        android:text="د شکایتونو لپاره لاندې لینک باندې کلیک وکړئ"
        android:textAllCaps="true"
        android:layout_above="@+id/view"
        android:textSize="14sp"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="6dp"/>

    <RelativeLayout
        android:background="@drawable/footer_gradient"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/view">

        <com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://play.google.com/store/apps/details?id=com.govpk.citizensportal"
            android:textSize="13sp" />

        <!--<com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
            android:id="@+id/tvTitleUrdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:text="یہاں کلک کر کے شکایات کے لیے پاکستانی شہری پورٹل ایپ ڈاؤن لوڈ کریں"
            android:textSize="14sp" />

        <com.kpitb.zakattandusherr.utility.CustomTextViewForMainPage
            android:id="@+id/tvTitlePashto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:text="د شکایتونو لپاره د پاکستان اتباع پورټل اپلیټ ډاونلوډ کولو لپاره دلته کلیک وکړئ"
            android:textSize="14sp" />-->

    </RelativeLayout>
</RelativeLayout>
