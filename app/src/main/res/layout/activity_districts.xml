<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DistrictsActivity">

    <include layout="@layout/main_toolbar" android:id="@+id/app_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:layout_below="@+id/app_bar"
        android:layout_margin="15dp"
        android:background="@drawable/shape2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/top_linear"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/eng_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eng"
                    android:text="English"
                    android:textSize="15sp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/language_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/urdu_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/urdu"
                    android:text="اردو"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following is the list of districts along with their focal persons and location given behind"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_below="@+id/top_linear"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مندرجہ ذیل اضلاع کی فہرست کے ساتھ ساتھ ان کے فوکل افراد اور مقام دیئے گئے ہیں"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_below="@+id/top_linear"
            android:textStyle="bold"
            android:padding="10dp"/>

    </RelativeLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/resyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relative"/>


</RelativeLayout>