<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/main_toolbar_two" android:id="@+id/app_bar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.cardview.widget.CardView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:elevation="16dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:id="@+id/engIntro"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_corners_btn_two"
                            android:backgroundTint="@color/white"
                            android:padding="4dp">

                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="تعليمى ګامونه (عمومي)"
                                android:textColor="@color/color3"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/mainCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:padding="8dp"
                            android:weightSum="8"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints">


                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:fontFamily="serif"
                                android:gravity="center|right"
                                android:justificationMode="inter_word"
                                android:text="تعليمى ګامونه (عمومي) معنی ده مستحق زده کونکو ته د مالي مرستې چمتو کولو لپاره ترڅو دوی د دوی زده کړې ته دوام ورکړي"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/elgibelity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:elevation="16dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/intro"
                    app:layout_constraintStart_toStartOf="@+id/intro"
                    app:layout_constraintTop_toBottomOf="@+id/intro"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:id="@+id/elgibelity_criteria_eng"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_corners_btn_two"
                            android:backgroundTint="@color/white"
                            android:padding="4dp">

                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="د وړتیا معیارونه"
                                android:textColor="@color/color3"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:weightSum="8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints">


                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:fontFamily="serif"
                                android:justificationMode="inter_word"
                                android:gravity="center|right"
                                android:text="خېبرپښتونخوا کې په داسې کالجونو ، پوهنتونونو ، پولی تخنیک او نورو تحصیلي او مسلکي نهادونو کې زده کړې کړې غریب او مستحق زده کونکو ته وظیفې ورکړل شوي چې د حکومت لخوا تاسیس شوي یا پیژندل شوي دي. استقبال د ځایی زکات کمیټو لخوا ټاکل شوی او د تعلیمی انسټیټیوټ بورسونو کمیټې لخوا تایید شوی. د بورسونو کمیټه د موسسې رییس ، د ټولګي ښوونکی او د ولسوالۍ د زکات کمیټې نوماندان لري."
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/how_to_apply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:elevation="16dp"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/elgibelity"
                    app:layout_constraintStart_toStartOf="@+id/elgibelity"
                    app:layout_constraintTop_toBottomOf="@+id/elgibelity"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:id="@+id/how_to_apply_eng"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_corners_btn_two"
                            android:backgroundTint="@color/white"
                            android:padding="4dp">

                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="څرنګه غوښتنه وکړۍ"
                                android:textColor="@color/color3"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            android:padding="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="MissingConstraints">


                            <com.kpitb.zakattandusherr.utility.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:gravity="center|right"
                                android:justificationMode="inter_word"
                                android:text="مستحق زده کونکی کولی شي د ادارې مشر ته غوښتنه وکړي کوم چې به د ځایی زکات کمیټې لخوا د استقامت له ټاکلو وروسته دا پروسه وکړي. بسپنې د ولسوالۍ د زکات کمیټې لخوا اړونده تعلیمي موسسې ته خپروي چې زده کونکي ته تادیه کوي."
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/btn_appointment"
                    android:layout_width="162dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/color3"
                    android:elevation="12dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:paddingHorizontal="32dp"
                    android:visibility="visible"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/how_to_apply">

                    <com.kpitb.zakattandusherr.utility.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_click"
                        android:drawablePadding="12dp"
                        android:onClick="DownloadForm"
                        android:text="ډاونلوډ فارم"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:ignore="OnClick" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_coming_soon"
                    android:layout_width="162dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/color3"
                    android:elevation="12dp"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:paddingHorizontal="32dp"
                    android:layout_marginRight="8dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/how_to_apply">

                    <com.kpitb.zakattandusherr.utility.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_click"
                        android:drawablePadding="12dp"
                        android:text="آنلاین غوښتنه"
                        android:id="@+id/coming_soon"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:ignore="OnClick" />

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
